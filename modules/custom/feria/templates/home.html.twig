<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .li-pills{float: none;display: inline-block;}
    .a-pills {padding:5px !important;}
    .panel-up {border-top:0px;}
</style>
<div> 
	<div property="schema:text">
		<div class="container-fluid">
			<div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                    <div class="container">
                        <br>
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                {% set j = 0 %}
                                {% for item in carousel1 %}
                                    {% if item.Type == 1 %}
                                        {% if j == 0 %}
                                            <li data-target="#myCarousel" data-slide-to="{{ j }}" class="active"></li>
                                        {% else %}
                                            <li data-target="#myCarousel" data-slide-to="{{ j }}"></li>
                                        {% endif %}
                                        {% set j = j + 1 %}
                                    {% endif %}
                                {% endfor %}
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                {% set k = 0 %}
                                {% for item in carousel2 %}
                                    {% if item.Type == 1 %}
                                        {% if k == 0 %}
                                            {% set k = 1 %}
                                            <div class="item active">
                                        {% else %}
                                            <div class="item">
                                        {% endif %}
                                                <img src="{{ file_url(item.uri) }}" width="100%">
                                                <div class="carousel-caption">
                                                <h3>{{ item.Title }}</h3>
                                                <p>{{ item.Text }}</p>
                                                </div>
                                            </div>
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                            </a>
                        </div>
                        </div>
                        <br/>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <nav>
                        <div class="container clearfix" >
                            <ul class="nav nav-pills center">
                                {% for item in links %}
                                    {% if item.Type == 1 %}
                                        <li class="li-pills"><a href="{{ item.URL }}" class="btn btn-local a-pills">{{ item.Text }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <br />

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <h4>{{ description }}</h4>
                        <h8>{{ comments }}</h8>
                    </div>
                </div>
            </div>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">Empresas Participantes</div>
                        <div class="panel-body" style="max-height:530px;overflow:auto;">
                            <div class="container-fluid">
                                {% set i = 0 %}
                                {% for item in companies %}
                                {% if i == 0 %}<div class="row">{% endif %}
                                <div class="col-md-4">
                                    <h5 class="tighten-height">{{ item.Nombre }}</h5>
                                    <p><em>Carreras: {{ item.Comment }}</em></p>
                                    <p>{{ item.Descripcion }}<a class="btn custom-btn btn-small btn-very-subtle" href="{{ item.URLPagina }}" target="_blank" title="">Sitio Web</a></p>
                                </div>
                                {% set i = i + 1 %}
                                {% if i == 3 %}{% set i = 0 %}</div>{% endif %}
                                {% endfor %}
                                {% if i > 0 %}</div>{% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab1danger" data-toggle="tab"><i class="fa fa-twitter" ></i></a></li>
                        <li>               <a href="#tab2danger" data-toggle="tab"><i class="fa fa-facebook"></i></a></li>
                        <li>               <a href="#tab3danger" data-toggle="tab"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                    <div class="panel tab-content panel-body panel-default panel-up">
                        <div class="tab-pane fade in active" id="tab1danger" style="max-height:500px;overflow:auto;">
                            <a class="twitter-timeline" href="https://twitter.com/BolsaFi">Tweets by TwitterDev</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
                        </div>
                        <div class="tab-pane fade" id="tab2danger">FaceBook</div>
                        <div class="tab-pane fade" id="tab3danger">Linkedin</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">Noticias</div>
                        <div class="panel-body" style="max-height:230px;min-height:230px;overflow:auto;">
                            <div id="carousel-example" class="carousel slide" data-ride="carousel">
                                <!-- Wrapper for slides -->
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="carousel-inner">
                                            {% set n = 0 %}
                                            {% for item in news %}
                                                {% if item.Type == 2 %}
                                                    {% if n == 0 %}
                                                        {% set n = 1 %}
                                                        <div class="item active">
                                                    {% else %}
                                                        <div class="item">
                                                    {% endif %}
                                                        <div class="carousel-content well">
                                                            <div>
                                                                <h5><a href="{{ item.URL }}">{{ item.Title }}</a></h5>                            
                                                                <span>{{ item.Text|replace({'% here %': item.Text })|raw }}</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div> 
                                <a class="left  carousel-control" href="#carousel-example" data-slide="prev"><span class="glyphicon glyphicon-chevron-left" ></span></a>
                                <a class="right carousel-control" href="#carousel-example" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">Ubicación</div>
                        <div class="panel-body">
                            <div id="map" style="min-height:200px"></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">¿Quienes Somos?</div>
                        <div class="panel-body">
                            {{ static.who|replace({'%Here%': static.who})|raw }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">Oficina</div>
                        <div class="panel-body">
                            {{ static.office|replace({'%Here%': static.office})|raw }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    function initMap() {
        var fi = {lng: -99.184259, lat: 19.331711};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 16,
            center: fi
        });
        var marker = new google.maps.Marker({
            position: fi,
            map: map
        });
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwBatUXttsvA8p_G6ef2THXPXW0b-hCfA&callback=initMap"></script>